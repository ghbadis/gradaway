<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: linear-gradient(to bottom right, #f5f7fa, #e9ebee);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AjouterRestaurantControllers">
    <children>
        <!-- Header Section -->
        <StackPane layoutX="0.0" layoutY="0.0" prefHeight="80.0" prefWidth="1000.0" style="-fx-background-color: #2196F3; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 3);">
            <children>
                <Text fill="WHITE" text="Ajouter un Restaurant" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Text>
            </children>
        </StackPane>
        
        <!-- Main Content -->
        <HBox layoutX="0.0" layoutY="80.0" prefHeight="620.0" prefWidth="1000.0" style="-fx-background-color: transparent;">
            <!-- Left Form Section -->
            <VBox prefHeight="620.0" prefWidth="600.0" spacing="15.0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1); -fx-background-radius: 8px; -fx-padding: 25px;">
                <padding>
                    <Insets top="10.0" right="30.0" bottom="10.0" left="30.0" />
                </padding>

                <!-- Form Title -->
                <Text fill="#2196F3" text="Informations du Restaurant">
            <font>
                        <Font name="System Bold" size="18.0" />
            </font>
        </Text>

                <!-- Form Fields with validation styling -->
                <VBox spacing="2">
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Text fill="#333333" text="Nom *" styleClass="form-label">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Text>
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="tf_nom" prefHeight="35.0" prefWidth="350.0" promptText="Nom du restaurant" 
                                 style="-fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #e0e0e0; -fx-padding: 8px; -fx-focus-color: #2196F3; -fx-faint-focus-color: #2196F322;" 
                                 styleClass="form-field" />
                    </HBox>
                    <Label fx:id="nomErrorLabel" textFill="#e53935" style="-fx-font-size: 11px; -fx-padding: 0 0 0 150px;" visible="false" managed="false" text="Veuillez entrer un nom valide" />
                </VBox>

                <VBox spacing="2">
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Text fill="#333333" text="Adresse *" styleClass="form-label">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Text>
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="tf_adresse" prefHeight="35.0" prefWidth="350.0" promptText="Adresse complète" 
                                 style="-fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #e0e0e0; -fx-padding: 8px; -fx-focus-color: #2196F3; -fx-faint-focus-color: #2196F322;" 
                                 styleClass="form-field" />
                    </HBox>
                    <Label fx:id="adresseErrorLabel" textFill="#e53935" style="-fx-font-size: 11px; -fx-padding: 0 0 0 150px;" visible="false" managed="false" text="Veuillez entrer une adresse valide" />
                </VBox>

                <VBox spacing="2">
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Text fill="#333333" text="Ville *" styleClass="form-label">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Text>
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="tf_ville" prefHeight="35.0" prefWidth="350.0" promptText="Ville" 
                                 style="-fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #e0e0e0; -fx-padding: 8px; -fx-focus-color: #2196F3; -fx-faint-focus-color: #2196F322;" 
                                 styleClass="form-field" />
                    </HBox>
                    <Label fx:id="villeErrorLabel" textFill="#e53935" style="-fx-font-size: 11px; -fx-padding: 0 0 0 150px;" visible="false" managed="false" text="Veuillez entrer une ville valide" />
                </VBox>

                <VBox spacing="2">
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Text fill="#333333" text="Pays *" styleClass="form-label">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Text>
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="tf_pays" prefHeight="35.0" prefWidth="350.0" promptText="Pays" 
                                 style="-fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #e0e0e0; -fx-padding: 8px; -fx-focus-color: #2196F3; -fx-faint-focus-color: #2196F322;" 
                                 styleClass="form-field" />
                    </HBox>
                    <Label fx:id="paysErrorLabel" textFill="#e53935" style="-fx-font-size: 11px; -fx-padding: 0 0 0 150px;" visible="false" managed="false" text="Veuillez entrer un pays valide" />
                </VBox>

                <VBox spacing="2">
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Text fill="#333333" text="Capacité *" styleClass="form-label">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Text>
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="tf_capaciteTotale" prefHeight="35.0" prefWidth="350.0" promptText="Capacité totale" 
                                 style="-fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #e0e0e0; -fx-padding: 8px; -fx-focus-color: #2196F3; -fx-faint-focus-color: #2196F322;" 
                                 styleClass="form-field" />
                    </HBox>
                    <Label fx:id="capaciteErrorLabel" textFill="#e53935" style="-fx-font-size: 11px; -fx-padding: 0 0 0 150px;" visible="false" managed="false" text="Veuillez entrer un nombre positif" />
                </VBox>

                <VBox spacing="2">
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Text fill="#333333" text="Ouverture *" styleClass="form-label">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Text>
                        <Region HBox.hgrow="ALWAYS" />
                        <ComboBox fx:id="cb_horaireOuverture" prefHeight="35.0" prefWidth="350.0" 
                                style="-fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #e0e0e0; -fx-padding: 5px; -fx-focus-color: #2196F3; -fx-faint-focus-color: #2196F322;" 
                                styleClass="form-field" />
                    </HBox>
                    <Label fx:id="ouvertureErrorLabel" textFill="#e53935" style="-fx-font-size: 11px; -fx-padding: 0 0 0 150px;" visible="false" managed="false" text="Veuillez sélectionner un horaire d'ouverture" />
                </VBox>

                <VBox spacing="2">
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Text fill="#333333" text="Fermeture *" styleClass="form-label">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Text>
                        <Region HBox.hgrow="ALWAYS" />
                        <ComboBox fx:id="cb_horaireFermeture" prefHeight="35.0" prefWidth="350.0" 
                                style="-fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #e0e0e0; -fx-padding: 5px; -fx-focus-color: #2196F3; -fx-faint-focus-color: #2196F322;" 
                                styleClass="form-field" />
                    </HBox>
                    <Label fx:id="fermetureErrorLabel" textFill="#e53935" style="-fx-font-size: 11px; -fx-padding: 0 0 0 150px;" visible="false" managed="false" text="Veuillez sélectionner un horaire de fermeture" />
                </VBox>

                <VBox spacing="2">
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Text fill="#333333" text="Téléphone" styleClass="form-label">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Text>
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="tf_telephone" prefHeight="35.0" prefWidth="350.0" promptText="Numéro de téléphone" 
                                 style="-fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #e0e0e0; -fx-padding: 8px; -fx-focus-color: #2196F3; -fx-faint-focus-color: #2196F322;" 
                                 styleClass="form-field" />
                    </HBox>
                    <Label fx:id="telephoneErrorLabel" textFill="#e53935" style="-fx-font-size: 11px; -fx-padding: 0 0 0 150px;" visible="false" managed="false" text="Format de numéro de téléphone invalide" />
                </VBox>

                <VBox spacing="2">
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Text fill="#333333" text="Email" styleClass="form-label">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Text>
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="tf_email" prefHeight="35.0" prefWidth="350.0" promptText="Adresse email" 
                                 style="-fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #e0e0e0; -fx-padding: 8px; -fx-focus-color: #2196F3; -fx-faint-focus-color: #2196F322;" 
                                 styleClass="form-field" />
                    </HBox>
                    <Label fx:id="emailErrorLabel" textFill="#e53935" style="-fx-font-size: 11px; -fx-padding: 0 0 0 150px;" visible="false" managed="false" text="Format d'email invalide" />
                </VBox>

                <Text fill="#757575" text="* Champs obligatoires" style="-fx-font-size: 12px;">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </Text>
            </VBox>
            
            <!-- Right Image Section -->
            <VBox prefHeight="620.0" prefWidth="400.0" spacing="15.0" alignment="CENTER" style="-fx-padding: 20px;">
                <StackPane prefHeight="300.0" prefWidth="360.0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1); -fx-background-radius: 8px;">
                    <children>
                        <Rectangle width="340.0" height="280.0" arcWidth="10.0" arcHeight="10.0" fill="#f5f5f5" stroke="#e0e0e0" strokeWidth="1.0" />
                        <ImageView fx:id="uploadedImageView" fitHeight="260.0" fitWidth="320.0" pickOnBounds="true" preserveRatio="true" />
                        <Label fx:id="imageErrorLabel" textFill="#e53935" visible="false" text="Veuillez sélectionner une image" style="-fx-background-color: rgba(255,255,255,0.8); -fx-padding: 5px; -fx-background-radius: 3px;">
                            <StackPane.margin>
                                <Insets bottom="-140.0" />
                            </StackPane.margin>
                        </Label>
                    </children>
                </StackPane>
                
                <Button onAction="#addimages" prefHeight="45.0" prefWidth="200.0" 
                        style="-fx-background-color: #FF5722; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 3, 0, 0, 2);" 
                        text="Télécharger Image">
                    <graphic>
                        <Region prefHeight="24.0" prefWidth="24.0" style="-fx-background-color: white; -fx-shape: 'M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z'; -fx-scale-x: 0.7; -fx-scale-y: 0.7;" />
                    </graphic>
                </Button>
                
                <HBox spacing="10.0" alignment="CENTER" prefHeight="100.0">
                    <Button fx:id="submitButton" onAction="#ajouterRestaurant" prefHeight="50.0" prefWidth="160.0" 
                            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 3, 0, 0, 2);" 
                            text="Ajouter">
                        <graphic>
                            <Region prefHeight="24.0" prefWidth="24.0" style="-fx-background-color: white; -fx-shape: 'M9 16.2L4.8 12l-1.4 1.4L9 19 21 7l-1.4-1.4L9 16.2z'; -fx-scale-x: 0.7; -fx-scale-y: 0.7;" />
                        </graphic>
                    </Button>
                            
                    <Button onAction="#listresto" prefHeight="50.0" prefWidth="160.0" 
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 3, 0, 0, 2);" 
                            text="Liste Restaurants">
                        <graphic>
                            <Region prefHeight="24.0" prefWidth="24.0" style="-fx-background-color: white; -fx-shape: 'M3 13h2v-2H3v2zm0 4h2v-2H3v2zm0-8h2V7H3v2zm4 4h14v-2H7v2zm0 4h14v-2H7v2zM7 7v2h14V7H7z'; -fx-scale-x: 0.7; -fx-scale-y: 0.7;" />
                        </graphic>
                    </Button>
                </HBox>
                
                <Button onAction="#listreservation" prefHeight="50.0" prefWidth="200.0" 
                        style="-fx-background-color: #673AB7; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 3, 0, 0, 2);" 
                        text="Liste Réservations">
                    <graphic>
                        <Region prefHeight="24.0" prefWidth="24.0" style="-fx-background-color: white; -fx-shape: 'M19 3h-4.18C14.4 1.84 13.3 1 12 1c-1.3 0-2.4.84-2.82 2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 0c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zm2 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z'; -fx-scale-x: 0.7; -fx-scale-y: 0.7;" />
                    </graphic>
                </Button>

                <!-- Form Status Message -->
                <StackPane fx:id="statusMessagePane" prefHeight="50.0" prefWidth="360.0" visible="false" managed="false"
                       style="-fx-background-color: #4CAF50; -fx-background-radius: 5px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1);">
                    <children>
                        <Label fx:id="statusMessage" text="Restaurant ajouté avec succès!" textFill="white">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                    </children>
                </StackPane>
            </VBox>
        </HBox>
    </children>
</AnchorPane>
