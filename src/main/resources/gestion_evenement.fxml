<AnchorPane prefHeight="627.0" prefWidth="907.0" styleClass="white-bg" stylesheets="@design.css" xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.Ajoutergestionevenementcontrolleur">
   <children>
      <HBox spacing="10" alignment="CENTER_LEFT" layoutX="57.0" layoutY="35.0">
         <TextField fx:id="chercher_txtf" promptText="Chercher" styleClass="search"/>
         <Button fx:id="ajouter_evenement_button" text="Ajouter un événement" styleClass="add-btn"/>
         <Button fx:id="user_button" text="User" styleClass="add-btn"/>
      </HBox>

      <VBox fx:id="formulaire_container" spacing="10" visible="false" managed="false" layoutX="57.0" layoutY="104.0">
         <HBox spacing="10">
            <Label text="Nom :">
               <font>
                  <Font name="Tahoma" size="14.0"/>
               </font>
            </Label>
            <TextField fx:id="nom_txtf" styleClass="textfield"/>
            <Label text="Lieu :">
               <font>
                  <Font name="Tahoma" size="14.0"/>
               </font>
            </Label>
            <TextField fx:id="lieu_txtf" styleClass="textfield"/>
         </HBox>

         <HBox spacing="10">
            <Label text="Description :">
               <font>
                  <Font name="Tahoma" size="14.0"/>
               </font>
            </Label>
            <TextField fx:id="description_txtf" styleClass="textfield"/>
            <Label text="Domaine :">
               <font>
                  <Font name="Tahoma" size="14.0"/>
               </font>
            </Label>
            <TextField fx:id="domaine_txtf" styleClass="textfield"/>
         </HBox>

         <HBox spacing="10">
            <Label text="Date :">
               <font>
                  <Font name="Tahoma" size="14.0"/>
               </font>
            </Label>
            <DatePicker fx:id="date_picker" styleClass="textfield"/>
            <Label text="Place Disponible :">
               <font>
                  <Font name="Tahoma" size="14.0"/>
               </font>
            </Label>
            <TextField fx:id="place_disponible_txtf" styleClass="textfield"/>
         </HBox>

         <HBox spacing="10">
            <Label text="Image :">
               <font>
                  <Font name="Tahoma" size="14.0"/>
               </font>
            </Label>
            <TextField fx:id="image_txtf" styleClass="textfield" editable="false"/>
            <Button fx:id="choisir_image_button" text="Choisir une image"/>
         </HBox>

         <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button fx:id="valider_button" text="Valider" styleClass="add-btn"/>
            <Button fx:id="annuler_button" text="Annuler" styleClass="clear-btn"/>
         </HBox>
      </VBox>

      <ScrollPane fitToWidth="true" fitToHeight="true" layoutX="57.0" layoutY="104.0" prefHeight="500.0" prefWidth="800.0">
         <content>
            <VBox fx:id="evenements_container" spacing="10"/>
         </content>
      </ScrollPane>
   </children>
</AnchorPane>
