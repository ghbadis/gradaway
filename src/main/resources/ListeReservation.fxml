<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="649.0" prefWidth="866.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ListeReservationControllers">
   <children>
      <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Label text="Liste des Réservations" textFill="#2196f3">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <TextField fx:id="searchField" prefHeight="30.0" prefWidth="250.0" promptText="Rechercher..." />
                  <HBox alignment="CENTER_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Button mnemonicParsing="false" onAction="#showAllReservations" style="-fx-background-color: #2196F3;" text="Toutes" textFill="WHITE" />
                        <Button mnemonicParsing="false" onAction="#filterPending" style="-fx-background-color: #FFC107;" text="En attente" textFill="WHITE" />
                        <Button mnemonicParsing="false" onAction="#filterAccepted" style="-fx-background-color: #4CAF50;" text="Acceptées" textFill="WHITE" />
                        <Button mnemonicParsing="false" onAction="#filterDeclined" style="-fx-background-color: #F44336;" text="Refusées" textFill="WHITE" />
                        <Button fx:id="btnRetour" mnemonicParsing="false" onAction="#retourAction" style="-fx-background-color: #9E9E9E;" text="Retour" textFill="WHITE" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </HBox>
            <TableView fx:id="reservationTable" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="foyerColumn" prefWidth="120.0" text="Foyer" />
                <TableColumn fx:id="etudiantColumn" prefWidth="120.0" text="Étudiant" />
                <TableColumn fx:id="dateDebutColumn" prefWidth="120.0" text="Date Début" />
                <TableColumn fx:id="dateFinColumn" prefWidth="120.0" text="Date Fin" />
                <TableColumn fx:id="dateReservationColumn" prefWidth="120.0" text="Date Réservation" />
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Statut" />
                <TableColumn fx:id="actionsColumn" prefWidth="150.0" text="Actions" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
