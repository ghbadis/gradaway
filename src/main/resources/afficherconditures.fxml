<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>

<AnchorPane prefHeight="700.0" prefWidth="800.0" style="-fx-background-color: #0A2463;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AfficherCondituresController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="0.0" layoutY="0.0" prefHeight="700.0" prefWidth="800.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            <Label text="Liste des Candidatures" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Label>
            
            <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="NEVER">
                <children>
                    <TextField fx:id="searchField" promptText="Rechercher..." />
                    <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearchButton" text="Rechercher" />
                    <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#handleRefreshButton" text="Actualiser" />
                    <Button fx:id="cardsButton" mnemonicParsing="false" onAction="#handleCardsButton" text="Vue en Cartes" />
                    <Button fx:id="retourButton" mnemonicParsing="false" onAction="#handleRetourButton" text="Retour" />
                </children>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </HBox>
            
            <TableView fx:id="candidatureTable" prefHeight="450.0" prefWidth="740.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="universiteImageColumn" prefWidth="120.0" text="Université Image" />
                <TableColumn fx:id="nomColumn" prefWidth="100.0" text="Nom" />
                <TableColumn fx:id="prenomColumn" prefWidth="100.0" text="Prénom" />
                <TableColumn fx:id="emailColumn" prefWidth="140.0" text="Email" />
                <TableColumn fx:id="universiteColumn" prefWidth="100.0" text="Université" />
                <TableColumn fx:id="domaineColumn" prefWidth="100.0" text="Domaine" />
                <TableColumn fx:id="dateColumn" prefWidth="120.0" text="Date de Soumission" />
              </columns>
              <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
              </columnResizePolicy>
              <VBox.margin>
                <Insets top="20.0" />
              </VBox.margin>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane> 
