<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.ModifierExpertController"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #0b1d3a;">

    <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <Label text="Modification d'un Expert" 
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        
        <GridPane hgap="10" vgap="15" alignment="CENTER">
            <Label text="ID Expert:" GridPane.columnIndex="0" GridPane.rowIndex="0" 
                   style="-fx-text-fill: white; -fx-font-size: 14px;"/>
            <TextField fx:id="idField" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                      style="-fx-background-color: white; -fx-prompt-text-fill: gray;" editable="false"/>
            
            <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="1" 
                   style="-fx-text-fill: white; -fx-font-size: 14px;"/>
            <TextField fx:id="nomField" GridPane.columnIndex="1" GridPane.rowIndex="1" 
                      style="-fx-background-color: white; -fx-prompt-text-fill: gray;"/>
            
            <Label text="Prénom:" GridPane.columnIndex="0" GridPane.rowIndex="2" 
                   style="-fx-text-fill: white; -fx-font-size: 14px;"/>
            <TextField fx:id="prenomField" GridPane.columnIndex="1" GridPane.rowIndex="2" 
                      style="-fx-background-color: white; -fx-prompt-text-fill: gray;"/>
            
            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3" 
                   style="-fx-text-fill: white; -fx-font-size: 14px;"/>
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3" 
                      style="-fx-background-color: white; -fx-prompt-text-fill: gray;"/>
            
            <Label text="Téléphone:" GridPane.columnIndex="0" GridPane.rowIndex="4" 
                   style="-fx-text-fill: white; -fx-font-size: 14px;"/>
            <TextField fx:id="telephoneField" GridPane.columnIndex="1" GridPane.rowIndex="4" 
                      style="-fx-background-color: white; -fx-prompt-text-fill: gray;"/>
            
            <Label text="Spécialité:" GridPane.columnIndex="0" GridPane.rowIndex="5" 
                   style="-fx-text-fill: white; -fx-font-size: 14px;"/>
            <ComboBox fx:id="specialiteComboBox" GridPane.columnIndex="1" GridPane.rowIndex="5" 
                     style="-fx-background-color: white;"/>
            
            <Label text="Années d'expérience:" GridPane.columnIndex="0" GridPane.rowIndex="6" 
                   style="-fx-text-fill: white; -fx-font-size: 14px;"/>
            <TextField fx:id="experienceField" GridPane.columnIndex="1" GridPane.rowIndex="6" 
                      style="-fx-background-color: white; -fx-prompt-text-fill: gray;"/>
        </GridPane>
        
        <HBox spacing="20" alignment="CENTER">
            <Button text="Modifier" fx:id="modifierButton" 
                    style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 8 16;"/>
            <Button text="Annuler" fx:id="annulerButton"
                    style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 8 16;"/>
        </HBox>
    </VBox>
</AnchorPane> 