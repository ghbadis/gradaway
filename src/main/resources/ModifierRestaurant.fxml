<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: linear-gradient(to bottom right, #f5f7fa, #e9ebee);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ModifierRestaurantController">
    <children>
        <!-- Header Section -->
        <StackPane layoutX="0.0" layoutY="0.0" prefHeight="80.0" prefWidth="1000.0" style="-fx-background-color: #FFC107; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 3);">
            <children>
                <Text fill="WHITE" text="Modifier un Restaurant" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Text>
            </children>
        </StackPane>
        
        <!-- Main Content -->
        <HBox layoutX="0.0" layoutY="80.0" prefHeight="620.0" prefWidth="1000.0" style="-fx-background-color: transparent;">
            <!-- Left Form Section -->
            <VBox prefHeight="620.0" prefWidth="600.0" spacing="15.0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1); -fx-background-radius: 8px; -fx-padding: 25px;">
                <padding>
                    <Insets top="10.0" right="30.0" bottom="10.0" left="30.0" />
                </padding>

                <!-- Form Title -->
                <Text fill="#FFC107" text="Informations du Restaurant">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Text>

                <!-- Restaurant ID (Hidden) -->
                <TextField fx:id="tf_id" visible="false" managed="false" />
                
                <!-- Form Fields -->
                <VBox spacing="2">
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Text fill="#333333" text="Nom *" styleClass="form-label">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Text>
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="tf_nom" prefHeight="35.0" prefWidth="350.0" promptText="Nom du restaurant" 
                                 style="-fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #e0e0e0; -fx-padding: 8px; -fx-focus-color: #FFC107; -fx-faint-focus-color: #FFC10722;" 
                                 styleClass="form-field" />
                    </HBox>
                </VBox>

                <VBox spacing="2">
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Text fill="#333333" text="Adresse *" styleClass="form-label">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Text>
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="tf_adresse" prefHeight="35.0" prefWidth="350.0" promptText="Adresse complète" 
                                 style="-fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #e0e0e0; -fx-padding: 8px; -fx-focus-color: #FFC107; -fx-faint-focus-color: #FFC10722;" 
                                 styleClass="form-field" />
                    </HBox>
                </VBox>

                <VBox spacing="2">
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Text fill="#333333" text="Ville *" styleClass="form-label">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Text>
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="tf_ville" prefHeight="35.0" prefWidth="350.0" promptText="Ville" 
                                 style="-fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #e0e0e0; -fx-padding: 8px; -fx-focus-color: #FFC107; -fx-faint-focus-color: #FFC10722;" 
                                 styleClass="form-field" />
                    </HBox>
                </VBox>

                <VBox spacing="2">
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Text fill="#333333" text="Pays *" styleClass="form-label">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Text>
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="tf_pays" prefHeight="35.0" prefWidth="350.0" promptText="Pays" 
                                 style="-fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #e0e0e0; -fx-padding: 8px; -fx-focus-color: #FFC107; -fx-faint-focus-color: #FFC10722;" 
                                 styleClass="form-field" />
                    </HBox>
                </VBox>

                <VBox spacing="2">
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Text fill="#333333" text="Capacité *" styleClass="form-label">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Text>
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="tf_capaciteTotale" prefHeight="35.0" prefWidth="350.0" promptText="Capacité totale" 
                                 style="-fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #e0e0e0; -fx-padding: 8px; -fx-focus-color: #FFC107; -fx-faint-focus-color: #FFC10722;" 
                                 styleClass="form-field" />
                    </HBox>
                </VBox>

                <VBox spacing="2">
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Text fill="#333333" text="Ouverture *" styleClass="form-label">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Text>
                        <Region HBox.hgrow="ALWAYS" />
                        <ComboBox fx:id="cb_horaireOuverture" prefHeight="35.0" prefWidth="350.0" 
                                style="-fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #e0e0e0; -fx-padding: 5px; -fx-focus-color: #FFC107; -fx-faint-focus-color: #FFC10722;" 
                                styleClass="form-field" />
                    </HBox>
                </VBox>

                <VBox spacing="2">
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Text fill="#333333" text="Fermeture *" styleClass="form-label">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Text>
                        <Region HBox.hgrow="ALWAYS" />
                        <ComboBox fx:id="cb_horaireFermeture" prefHeight="35.0" prefWidth="350.0" 
                                style="-fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #e0e0e0; -fx-padding: 5px; -fx-focus-color: #FFC107; -fx-faint-focus-color: #FFC10722;" 
                                styleClass="form-field" />
                    </HBox>
                </VBox>

                <VBox spacing="2">
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Text fill="#333333" text="Téléphone" styleClass="form-label">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Text>
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="tf_telephone" prefHeight="35.0" prefWidth="350.0" promptText="Numéro de téléphone" 
                                 style="-fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #e0e0e0; -fx-padding: 8px; -fx-focus-color: #FFC107; -fx-faint-focus-color: #FFC10722;" 
                                 styleClass="form-field" />
                    </HBox>
                </VBox>

                <VBox spacing="2">
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Text fill="#333333" text="Email" styleClass="form-label">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Text>
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="tf_email" prefHeight="35.0" prefWidth="350.0" promptText="Adresse email" 
                                 style="-fx-background-radius: 5px; -fx-border-radius: 5px; -fx-border-color: #e0e0e0; -fx-padding: 8px; -fx-focus-color: #FFC107; -fx-faint-focus-color: #FFC10722;" 
                                 styleClass="form-field" />
                    </HBox>
                </VBox>

                <Text fill="#757575" text="* Champs obligatoires" style="-fx-font-size: 12px;">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </Text>
            </VBox>
            
            <!-- Right Image Section -->
            <VBox prefHeight="620.0" prefWidth="400.0" spacing="15.0" alignment="CENTER" style="-fx-padding: 20px;">
                <StackPane prefHeight="300.0" prefWidth="360.0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1); -fx-background-radius: 8px;">
                    <children>
                        <Rectangle width="340.0" height="280.0" arcWidth="10.0" arcHeight="10.0" fill="#f5f5f5" stroke="#e0e0e0" strokeWidth="1.0" />
                        <ImageView fx:id="uploadedImageView" fitHeight="260.0" fitWidth="320.0" pickOnBounds="true" preserveRatio="true" />
                    </children>
                </StackPane>
                
                <Button fx:id="btnUploadImage" onAction="#uploadImage" prefHeight="45.0" prefWidth="200.0" 
                        style="-fx-background-color: #FF5722; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 3, 0, 0, 2);" 
                        text="Changer l'image">
                    <graphic>
                        <Region prefHeight="24.0" prefWidth="24.0" style="-fx-background-color: white; -fx-shape: 'M9 16h2v-4h4v-2h-4V6H9v4H5v2h4v4zm-4.5-9.5h3V4h-3V2H3v2H1v2h2v2h2v-2zm7 0h3V4h-3V2h-2v2h-2v2h2v2h2v-2zm7 0h3V4h-3V2h-2v2h-2v2h2v2h2v-2z'; -fx-scale-x: 0.7; -fx-scale-y: 0.7;" />
                    </graphic>
                </Button>
                
                <HBox spacing="10.0" alignment="CENTER" prefHeight="100.0">
                    <Button fx:id="btnEnregistrer" onAction="#enregistrerModifications" prefHeight="50.0" prefWidth="160.0" 
                            style="-fx-background-color: #FFC107; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 3, 0, 0, 2);" 
                            text="Enregistrer">
                        <graphic>
                            <Region prefHeight="24.0" prefWidth="24.0" style="-fx-background-color: white; -fx-shape: 'M9 16.2L4.8 12l-1.4 1.4L9 19 21 7l-1.4-1.4L9 16.2z'; -fx-scale-x: 0.7; -fx-scale-y: 0.7;" />
                        </graphic>
                    </Button>
                            
                    <Button fx:id="btnSupprimer" onAction="#supprimerRestaurant" prefHeight="50.0" prefWidth="160.0" 
                            style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 3, 0, 0, 2);" 
                            text="Supprimer">
                        <graphic>
                            <Region prefHeight="24.0" prefWidth="24.0" style="-fx-background-color: white; -fx-shape: 'M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z'; -fx-scale-x: 0.7; -fx-scale-y: 0.7;" />
                        </graphic>
                    </Button>
                </HBox>
                
                <Button fx:id="btnAnnuler" onAction="#annuler" prefHeight="50.0" prefWidth="200.0" 
                        style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 3, 0, 0, 2);" 
                        text="Annuler">
                    <graphic>
                        <Region prefHeight="24.0" prefWidth="24.0" style="-fx-background-color: white; -fx-shape: 'M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z'; -fx-scale-x: 0.7; -fx-scale-y: 0.7;" />
                    </graphic>
                </Button>

                <!-- Status Message -->
                <StackPane fx:id="statusMessagePane" prefHeight="50.0" prefWidth="360.0" visible="false" managed="false"
                       style="-fx-background-color: #4CAF50; -fx-background-radius: 5px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1);">
                    <children>
                        <Label fx:id="statusMessage" text="Restaurant modifié avec succès!" textFill="white">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                    </children>
                </StackPane>
            </VBox>
        </HBox>
    </children>
</AnchorPane> 