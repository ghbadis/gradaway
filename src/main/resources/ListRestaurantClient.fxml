<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: linear-gradient(to bottom right, #f5f7fa, #e9ebee);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ListRestaurantClientController">
   <children>
      <!-- Header Section -->
      <HBox alignment="CENTER" layoutX="0.0" layoutY="0.0" prefHeight="100.0" prefWidth="1000.0" style="-fx-background-color: #2196F3; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 3);">
         <children>
            <HBox alignment="CENTER" spacing="30.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Restaurants Disponibles" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Button fx:id="mesReservationsBtn" mnemonicParsing="false" onAction="#voirMesReservations" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: white; -fx-text-fill: #2196F3; -fx-background-radius: 20px; -fx-font-weight: bold;" text="Mes Réservations">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      
      <!-- Search Section -->
      <HBox alignment="CENTER" layoutX="0.0" layoutY="110.0" prefHeight="80.0" prefWidth="1000.0" spacing="15.0">
         <children>
            <TextField fx:id="tf_search" prefHeight="40.0" prefWidth="250.0" promptText="Rechercher un restaurant..." style="-fx-background-radius: 20px; -fx-border-radius: 20px; -fx-border-color: #e0e0e0; -fx-padding: 8px 15px;">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Button mnemonicParsing="false" onAction="#search" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 20px;" text="Rechercher">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <MenuButton fx:id="locationMenu" prefHeight="40.0" prefWidth="250.0" style="-fx-background-radius: 20px; -fx-border-radius: 20px; -fx-border-color: #e0e0e0; -fx-padding: 8px 15px;" text="Ville">
               <font>
                  <Font size="14.0" />
               </font>
               <!-- Les villes seront ajoutées dynamiquement -->
            </MenuButton>
            <Button mnemonicParsing="false" onAction="#filterByLocation" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-background-radius: 20px;" text="Search">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      
      <!-- Restaurants List Section -->
      <ScrollPane fitToWidth="true" layoutX="50.0" layoutY="200.0" prefHeight="450.0" prefWidth="900.0" style="-fx-background-color: transparent; -fx-background: transparent;">
         <content>
            <TilePane fx:id="restaurantsContainer" prefWidth="880.0" hgap="15.0" vgap="15.0" prefColumns="3" alignment="CENTER" tileAlignment="CENTER" style="-fx-background-color: transparent;">
               <!-- Les restaurants seront ajoutés ici dynamiquement -->
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </TilePane>
         </content>
      </ScrollPane>
      
      <!-- Footer Section -->
      <HBox alignment="CENTER" layoutX="0.0" layoutY="650.0" prefHeight="50.0" prefWidth="1000.0" style="-fx-background-color: #f0f0f0;">
         <children>
            <Button mnemonicParsing="false" onAction="#retourAccueil" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 20px;" text="Retour à l'accueil">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
