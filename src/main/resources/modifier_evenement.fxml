<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="white-bg" stylesheets="@design.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ModifierEvenementController">
   <children>
      <VBox spacing="20" styleClass="form-container" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
         <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
         </padding>
         
         <Label text="Modifier l'événement" styleClass="title-label"/>
         
         <GridPane vgap="15" hgap="15">
            <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0"/>
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="350.0"/>
            </columnConstraints>
            
            <rowConstraints>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            
            <Label text="Nom :" styleClass="form-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nom_txtf" styleClass="textfield" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            
            <Label text="Description :" styleClass="form-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="description_txtf" styleClass="textfield" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            
            <Label text="Date :" styleClass="form-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <DatePicker fx:id="date_picker" styleClass="textfield" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            
            <Label text="Lieu :" styleClass="form-label" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="lieu_txtf" styleClass="textfield" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            
            <Label text="Domaine :" styleClass="form-label" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="domaine_txtf" styleClass="textfield" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            
            <Label text="Places disponibles :" styleClass="form-label" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="place_disponible_txtf" styleClass="textfield" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <!-- Champ image -->
            <Label text="Image :" styleClass="form-label" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <HBox spacing="10" GridPane.rowIndex="6" GridPane.columnIndex="1">
                <TextField fx:id="image_txtf" styleClass="textfield" editable="false" HBox.hgrow="ALWAYS"/>
                <Button fx:id="choisir_image_button" text="Choisir une image"/>
            </HBox>
         </GridPane>
         
         <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button fx:id="valider_button" text="Valider" styleClass="add-btn"/>
            <Button fx:id="annuler_button" text="Annuler" styleClass="clear-btn"/>
         </HBox>
      </VBox>
   </children>
</AnchorPane> 