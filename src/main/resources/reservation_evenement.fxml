<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@design.css" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ReservationEvenementController">
    
    <VBox alignment="CENTER" layoutX="18.4" prefHeight="360.0" prefWidth="562.0" spacing="20" stylesheets="@design.css" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="18.0" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
        <Label text="Réservation d'événement" styleClass="title-label"/>
        <GridPane hgap="10" vgap="15">
            <Label text="Nom:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="nom_txtf" promptText="Nom" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label text="Prénom:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="prenom_txtf" promptText="Prénom" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Email:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="email_txtf" promptText="Email" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Date:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <DatePicker fx:id="date_picker" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>
        <Button fx:id="reserver_button" styleClass="add-btn" text="Réserver" />
        <Button fx:id="afficher_mes_reservation_butt" mnemonicParsing="false" styleClass="clear-btn" stylesheets="@design.css" text="Afficher mes reservation " />
    </VBox>
</AnchorPane>
