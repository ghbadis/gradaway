<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #0A2463;" 
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controllers.NewCandidatureController">
   <children>
      <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" 
            AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label text="Nouvelle Candidature" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            
            <GridPane hgap="15" vgap="15">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="200.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="400.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label text="Dossier ID:" textFill="WHITE" GridPane.rowIndex="0" />
                  <ComboBox fx:id="dossierComboBox" prefWidth="400.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  
                  <Label text="Université:" textFill="WHITE" GridPane.rowIndex="1" />
                  <ComboBox fx:id="universiteComboBox" prefWidth="400.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  
                  <Label text="Domaine d'étude:" textFill="WHITE" GridPane.rowIndex="2" />
                  <TextField fx:id="domaineField" prefWidth="400.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  
                  <Label text="Date de remise:" textFill="WHITE" GridPane.rowIndex="3" />
                  <DatePicker fx:id="datePicker" prefWidth="400.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  
                  <Label text="Commentaire:" textFill="WHITE" GridPane.rowIndex="4" />
                  <TextArea fx:id="commentaireArea" prefHeight="100.0" prefWidth="400.0" GridPane.columnIndex="1" 
                            GridPane.rowIndex="4" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </GridPane>
            
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="submitButton" mnemonicParsing="false" onAction="#handleSubmitButton" 
                          prefHeight="40.0" prefWidth="150.0" 
                          style="-fx-background-color: #3E92CC;" text="Soumettre" textFill="WHITE" />
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancelButton" 
                          prefHeight="40.0" prefWidth="150.0" 
                          style="-fx-background-color: #D8315B;" text="Annuler" textFill="WHITE" />
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane> 