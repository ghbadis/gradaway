<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.DashboardController"
            prefHeight="700.0" prefWidth="1000.0"
            style="-fx-background-color: #0A2463;">

    <VBox spacing="30" alignment="CENTER" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="50.0" 
          AnchorPane.rightAnchor="50.0" AnchorPane.bottomAnchor="50.0">
        
        <Label text="GRADAWAY - Dashboard" textFill="WHITE">
            <font>
                <Font name="System Bold" size="28.0"/>
            </font>
        </Label>
        
        <HBox spacing="50" alignment="CENTER">
            <!-- University Module Card -->
            <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #1A3473; -fx-background-radius: 10; -fx-padding: 20;">
                <Label text="Gestion des Universités" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>
                
                <VBox spacing="10">
                    <Button text="Ajouter Université" 
                            onAction="#handleAjouterUniversite"
                            prefWidth="200" prefHeight="40"
                            style="-fx-background-color: #3E92CC; -fx-text-fill: white;"/>
                    
                    <Button text="Modifier Université" 
                            onAction="#handleModifierUniversite"
                            prefWidth="200" prefHeight="40"
                            style="-fx-background-color: #3E92CC; -fx-text-fill: white;"/>
                    
                    <Button text="Afficher Universités" 
                            onAction="#handleAfficherUniversite"
                            prefWidth="200" prefHeight="40"
                            style="-fx-background-color: #3E92CC; -fx-text-fill: white;"/>
                    
                    <Button text="Supprimer Université" 
                            onAction="#handleSupprimerUniversite"
                            prefWidth="200" prefHeight="40"
                            style="-fx-background-color: #3E92CC; -fx-text-fill: white;"/>
                </VBox>
            </VBox>
            
            <!-- Candidature Module Card -->
            <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #1A3473; -fx-background-radius: 10; -fx-padding: 20;">
                <Label text="Gestion des Candidatures" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>
                
                <VBox spacing="10">
                    <Button text="Supprimer Candidature" 
                            fx:id="nouvelleCandidatureButton"
                            onAction="#handleNouvelleCandidature"
                            prefWidth="200" prefHeight="40"
                            style="-fx-background-color: #3E92CC; -fx-text-fill: white;"/>
                    
                    <Button text="Mes Candidatures" 
                            onAction="#handleMesCandidatures"
                            prefWidth="200" prefHeight="40"
                            style="-fx-background-color: #3E92CC; -fx-text-fill: white;"/>
                    
                    <Button text="Rechercher Université" 
                            onAction="#handleRechercherUniversite"
                            prefWidth="200" prefHeight="40"
                            style="-fx-background-color: #3E92CC; -fx-text-fill: white;"/>
                    
                    <Button text="Suivi des Candidatures" 
                            onAction="#handleSuiviCandidatures"
                            prefWidth="200" prefHeight="40"
                            style="-fx-background-color: #3E92CC; -fx-text-fill: white;"/>
                </VBox>
            </VBox>
        </HBox>
        
        <Button text="Quitter" 
                onAction="#handleQuitButton"
                prefWidth="150" prefHeight="40"
                style="-fx-background-color: #D8315B; -fx-text-fill: white;"/>
    </VBox>
</AnchorPane> 