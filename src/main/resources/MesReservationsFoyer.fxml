<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: linear-gradient(to bottom right, #f5f7fa, #e9ebee);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MesReservationsFoyerController">
   <children>
      <!-- Header Section -->
      <HBox alignment="CENTER" layoutX="0.0" layoutY="0.0" prefHeight="100.0" prefWidth="1000.0" style="-fx-background-color: #FF5722; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 3);">
         <children>
            <Label text="Mes Réservations de Foyer" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Label>
         </children>
      </HBox>
      
      <!-- Reservations List Section -->
      <ScrollPane fitToWidth="true" layoutX="50.0" layoutY="120.0" prefHeight="500.0" prefWidth="900.0" style="-fx-background-color: transparent; -fx-background: transparent;">
         <content>
            <TilePane fx:id="reservationsContainer" prefWidth="880.0" hgap="15.0" vgap="15.0" prefColumns="3" alignment="CENTER" tileAlignment="CENTER" style="-fx-background-color: transparent;">
               <!-- Les réservations seront ajoutées ici dynamiquement -->
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </TilePane>
         </content>
      </ScrollPane>
      
      <!-- Footer Section -->
      <HBox alignment="CENTER" layoutX="0.0" layoutY="640.0" prefHeight="60.0" prefWidth="1000.0" style="-fx-background-color: #f0f0f0;">
         <children>
            <Button mnemonicParsing="false" onAction="#retourAccueil" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #FF5722; -fx-text-fill: white; -fx-background-radius: 20px;" text="Retour à l'accueil">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
