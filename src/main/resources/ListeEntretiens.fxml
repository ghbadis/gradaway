<AnchorPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ListeEntretiensController">
    <!-- Blue header bar -->
    <VBox spacing="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <HBox alignment="CENTER" prefHeight="83.0" prefWidth="1040.0" style="-fx-background-color: #3454d1;">
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" text="Gestion des Entretiens" />
        </HBox>
        <!-- Add button and header row -->
        <VBox spacing="10" style="-fx-padding: 30 40 0 40;">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button fx:id="ajouterButton" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 18;" text="Ajouter un Entretien" />
                <Button fx:id="voirDemandesButton" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 18;" text="Voir les Demandes" />
            </HBox>
            <!-- Header row for columns -->
            <HBox prefHeight="48.0" prefWidth="976.0" spacing="0" style="-fx-background-color: #fff; -fx-padding: 12 0 12 0; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 2 0;">
                <Label maxWidth="220" minWidth="220" style="-fx-font-weight: bold; -fx-font-size: 15px;" text="Nom Expert" />
                <Label maxWidth="120" minWidth="120" style="-fx-font-weight: bold; -fx-font-size: 15px;" text="Date" />
                <Label maxWidth="100" minWidth="100" style="-fx-font-weight: bold; -fx-font-size: 15px;" text="Heure" />
                <Label maxWidth="100" minWidth="100" style="-fx-font-weight: bold; -fx-font-size: 15px;" text="Ã‰tat" />
                <Label maxWidth="120" minWidth="120" style="-fx-font-weight: bold; -fx-font-size: 15px;" text="Type" />
                <Label maxWidth="160" minWidth="160" style="-fx-font-weight: bold; -fx-font-size: 15px;" text="Offre" />
                <Region minWidth="0" HBox.hgrow="ALWAYS" />
                <Label alignment="CENTER_RIGHT" maxWidth="180" minWidth="180" style="-fx-font-weight: bold; -fx-font-size: 15px;" text="Actions" />
            </HBox>
        </VBox>
        <!-- ListView for data rows -->
        <ListView fx:id="entretiensList" maxHeight="420" minHeight="420" style="-fx-background-color: #fff; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;" VBox.vgrow="ALWAYS" />
        <!-- Exit button at the bottom -->
        <HBox alignment="CENTER" style="-fx-padding: 20 0 20 0;">
            <Button fx:id="fermerButton" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 32;" text="Quitter" />
        </HBox>
    </VBox>
</AnchorPane>
