<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<!-- Changed controller -->
<AnchorPane fx:id="rootPane" prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ModifierDossierController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="30.0" spacing="20.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="30.0">
            <children>
                <!-- Changed title -->
                <Label text="Modifier Mon Dossier" textFill="#333333">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                    <content>
                        <GridPane hgap="15.0" vgap="15.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <!-- Fields are the same as AjoutDossier -->
                                <!-- CIN -->
                                <Label text="CIN:" GridPane.halignment="RIGHT" />
                                <TextField fx:id="cinPathField" editable="false" promptText="Aucun fichier sélectionné" GridPane.columnIndex="1" />
                                <Button mnemonicParsing="false" onAction="#handleUploadCin" text="Choisir Fichier..." GridPane.columnIndex="2" />

                                <!-- Photo -->
                                <Label text="Photo:" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                                <TextField fx:id="photoPathField" editable="false" promptText="Aucun fichier sélectionné" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Button mnemonicParsing="false" onAction="#handleUploadPhoto" text="Choisir Fichier..." GridPane.columnIndex="2" GridPane.rowIndex="1" />

                                <!-- Diplôme Baccalauréat -->
                                <Label text="Diplôme Baccalauréat:" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                                <TextField fx:id="diplomeBacPathField" editable="false" promptText="Aucun fichier sélectionné" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <Button mnemonicParsing="false" onAction="#handleUploadDiplomeBac" text="Choisir Fichier..." GridPane.columnIndex="2" GridPane.rowIndex="2" />

                                <!-- Relevé de Notes -->
                                <Label text="Relevé de Notes:" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
                                <TextField fx:id="releveNotePathField" editable="false" promptText="Aucun fichier sélectionné" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                <Button mnemonicParsing="false" onAction="#handleUploadReleveNote" text="Choisir Fichier..." GridPane.columnIndex="2" GridPane.rowIndex="3" />

                                <!-- Diplômes Obtenus -->
                                <Label text="Diplômes Obtenus:" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
                                <TextField fx:id="diplomeObtenuPathField" editable="false" promptText="Aucun fichier sélectionné" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                <Button mnemonicParsing="false" onAction="#handleUploadDiplomeObtenu" text="Choisir Fichier..." GridPane.columnIndex="2" GridPane.rowIndex="4" />

                                <!-- Lettre de Motivations -->
                                <Label text="Lettre de Motivations:" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
                                <TextField fx:id="lettreMotivationPathField" editable="false" promptText="Aucun fichier sélectionné" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                <Button mnemonicParsing="false" onAction="#handleUploadLettreMotivation" text="Choisir Fichier..." GridPane.columnIndex="2" GridPane.rowIndex="5" />

                                <!-- Dossier Santé -->
                                <Label text="Dossier Santé:" GridPane.halignment="RIGHT" GridPane.rowIndex="6" />
                                <TextField fx:id="dossierSantePathField" editable="false" promptText="Aucun fichier sélectionné" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                                <Button mnemonicParsing="false" onAction="#handleUploadDossierSante" text="Choisir Fichier..." GridPane.columnIndex="2" GridPane.rowIndex="6" />

                                <!-- CV -->
                                <Label text="CV:" GridPane.halignment="RIGHT" GridPane.rowIndex="7" />
                                <TextField fx:id="cvPathField" editable="false" promptText="Aucun fichier sélectionné" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                                <Button mnemonicParsing="false" onAction="#handleUploadCv" text="Choisir Fichier..." GridPane.columnIndex="2" GridPane.rowIndex="7" />

                                <!-- Date de Dépôt -->
                                <Label text="Date de Dépôt:" GridPane.halignment="RIGHT" GridPane.rowIndex="8" />
                                <DatePicker fx:id="dateDepotPicker" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="8" />

                            </children>
                           <padding>
                              <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                           </padding>
                        </GridPane>
                    </content>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </ScrollPane>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                         <!-- Changed button text and action -->
                        <Button fx:id="updateButton" mnemonicParsing="false" onAction="#handleUpdateDossier" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Enregistrer">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Button>
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Annuler">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</AnchorPane> 